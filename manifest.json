{
  "manifest_version": 2,
  "name": "bibtexify",
  "version": "1.1",
  "description": "Adds a button to copy bibtex of arXiv abstract or pdf webpage",
  
  "page_action": {
    "show_matches": ["*://*.arxiv.org/*"],
    "browser_style": true,
    "default_icon": "clipboard-plus.svg",
    "default_title": "bibtexify"
  },
  
  "permissions": [
      "activeTab",
      "clipboardWrite",
      "notifications"
    ],

    "background": {
      "scripts": ["bibtexify.js"]
    }
}
